<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.avdeev.chat.client.MainController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <MenuBar stylesheets="@css/main.css">
            <Menu styleClass="menu" text="File">
               <MenuItem onAction="#connectServer" text="Connect" />
               <MenuItem onAction="#disconnectServer" text="Disconnect" />
               <MenuItem onAction="#mockAction" text="Item3" />
               <MenuItem onAction="#mockAction" text="Item4" />
               <MenuItem onAction="#mockAction" text="Item5" />
               <MenuItem onAction="#exit" text="Exit" />
            </Menu>
            <Menu styleClass="menu" text="Edit">
               <MenuItem onAction="#mockAction" text="Item1" />
               <MenuItem onAction="#mockAction" text="Item2" />
               <MenuItem onAction="#mockAction" text="Item3" />
               <MenuItem onAction="#mockAction" text="Item4" />
               <MenuItem onAction="#mockAction" text="Item5" />
               <MenuItem onAction="#mockAction" text="Item6" />
            </Menu>
            <Menu styleClass="menu" text="View">
               <MenuItem onAction="#mockAction" text="Item1" />
               <MenuItem onAction="#mockAction" text="Item2" />
               <MenuItem onAction="#mockAction" text="Item3" />
               <MenuItem onAction="#mockAction" text="Item4" />
               <MenuItem onAction="#mockAction" text="Item5" />
               <MenuItem onAction="#mockAction" text="Item6" />
            </Menu>
            <Menu styleClass="menu" text="Help">
               <MenuItem onAction="#mockAction" text="Item1" />
               <MenuItem onAction="#mockAction" text="Item2" />
               <MenuItem onAction="#mockAction" text="Item3" />
               <MenuItem onAction="#mockAction" text="Item4" />
               <MenuItem onAction="#showHelp" text="Help" />
               <MenuItem onAction="#showAbout" text="About" />
            </Menu>
         </MenuBar>
         <SplitPane dividerPositions="0.35" stylesheets="@css/main.css" VBox.vgrow="ALWAYS">
           <items>
             <AnchorPane minWidth="100">
                  <children>
                     <ListView fx:id="contactList" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                  </children>
               </AnchorPane>
             <AnchorPane minWidth="100">
                  <children>
                     <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS" />
                        <HBox VBox.vgrow="NEVER">
                           <TextField fx:id="messageField" minHeight="40" promptText="You message" HBox.hgrow="ALWAYS" onAction="#sendMessage"/>
                           <Button fx:id="btnSend" minHeight="40" text="Send" onAction="#sendMessage"/>
                        </HBox>
                     </VBox>
                  </children>
               </AnchorPane>
           </items>
         </SplitPane>
      </VBox>
   </children>
</AnchorPane>
